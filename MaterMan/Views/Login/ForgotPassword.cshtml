
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #f8f9fa;">
    <form method="post" action="/Login/ForgotPassword" style="width: 100%; max-width: 350px; background: #fff; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <h2 style="text-align: center; color: #343a40; margin-bottom: 20px;">Şifremi Unuttum</h2>

        @if (ViewBag.Message != null)
        {
            <p style="color: green; text-align: center;">@ViewBag.Message</p>
        }
        else
        {
            <label for="email" style="font-weight: 500; display: block; margin-bottom: 5px;">E-posta Adresiniz:</label>
            <input type="email" name="email" required style="width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ced4da; border-radius: 5px;" />

            <button type="submit" style="width: 100%; padding: 10px; background: #007bff; color: white; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;">
                Şifre Sıfırlama Bağlantısı Gönder
            </button>
        }
    </form>
</div>

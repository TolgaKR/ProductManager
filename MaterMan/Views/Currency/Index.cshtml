
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Currency>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title"><i class="fas fa-coins"></i> Güncel Döviz Kurları</h3>
    </div>
    <div class="card-body">
        <table class="table table-hover table-bordered text-center">
            <thead class="table-light">
                <tr>
                    <th>Para Birimi</th>
                    <th>Alış</th>
                    <th>Satış</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var currency in Model)
                {
                    <tr>
                        <td>
                            <i class="fas fa-money-bill-wave"></i>
                            <strong>@currency.Name (@currency.Code)</strong>
                        </td>
                        <td class="text-success"><strong>@currency.ForexBuying</strong></td>
                        <td class="text-danger"><strong>@currency.ForexSelling</strong></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using MaterMan.Entity.Concrete
@model ReceteViewModel

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reçete Detayı</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">@Model.ReceteIsmi</h3>
            </div>
            <div class="card-body">
                <p><strong>Açıklama:</strong> @Model.Aciklama</p>
                <p><strong>Versiyon No:</strong> @Model.VersiyonNo</p>

                <h4 class="mt-4">Reçete Kalemleri</h4>
                <table class="table table-bordered table-hover mt-3">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Malzeme Adi</th>
                            <th>Miktar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var (kalem, index) in Model.Kalemler.Select((k, i) => (k, i + 1)))
                        {
                            <tr>
                                <td>@index</td>
                                <td>@kalem.MalzemeAdi</td>
                                <td>@kalem.Miktar</td>
                            </tr>
                           
                        }
                    </tbody>
                   


                </table>
              

                <a href="@Url.Action("ReceteList", "Recete")" class="btn btn-secondary mt-3">Geri Dön</a>
            </div>
        </div>
    </div>
</body>
</html>

